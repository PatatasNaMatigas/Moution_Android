<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252525">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/monocraft"
        android:text="Settings"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.13" />

    <TextView
        android:id="@+id/mouse_pointer_sensitivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="50dp"
        android:maxLines="1"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/monocraft"
        android:text="Mouse Pointer Sensitivity"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.05" />

    <EditText
        android:id="@+id/mouse_sensi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="50dp"
        android:maxLines="1"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/monocraft"
        android:hint="1.0"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mouse_pointer_sensitivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.07" />

    <TextView
        android:id="@+id/mouse_scroll_sensitivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="50dp"
        android:maxLines="1"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/monocraft"
        android:text="Mouse Scroll Sensitivity"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mouse_sensi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.05" />

    <EditText
        android:id="@+id/scroll_sensi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="50dp"
        android:maxLines="1"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/monocraft"
        android:hint="1.0"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mouse_scroll_sensitivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.07" />

    <ImageButton
        android:id="@+id/copy_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="2:1"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:src="@drawable/long_template"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintTop_toTopOf="@id/scroll_sensi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/copy_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:elevation="2dp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="40dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="1dp"
        android:text="OK"
        android:fontFamily="@font/monocraft"
        android:gravity="center_vertical|center"
        app:layout_constraintStart_toStartOf="@id/copy_button"
        app:layout_constraintEnd_toEndOf="@id/copy_button"
        app:layout_constraintBottom_toBottomOf="@id/copy_button"
        app:layout_constraintTop_toTopOf="@id/copy_button" />

</androidx.constraintlayout.widget.ConstraintLayout>